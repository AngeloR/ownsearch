{
  "name": "@ownsearch/search-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "esbuild src/index.ts --bundle --format=esm --sourcemap --outdir=dist/assets --target=es2020",
    "copy:static": "shx mkdir -p dist && shx cp -r public/* dist",
    "build": "pnpm run clean && pnpm run build:ts && pnpm run copy:static",
    "dev": "pnpm run clean && esbuild src/index.ts --bundle --format=esm --sourcemap --outdir=dist/assets --target=es2020 --servedir=dist --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  }
}
